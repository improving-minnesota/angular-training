      .controller('AppController', [
        '$scope',
        function($scope) {
          $scope.time = new Date();
        }
      ])
      .controller('TimeController', [
        '$scope',
        '$interval',
        function($scope, $interval) {
          $scope.updateTime = function updateTime() {
            $scope.time = new Date();
          };

          $interval(function() {
            $scope.updateTime();
          }, 25);
        }
      ]);

